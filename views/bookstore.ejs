<% include ./partials/header %>

<div class="row text-center" style="display: flex; flex-wrap: wrap; margin-top: 80px;">
  <% books.forEach(function(book){ %>
    <div class="col-md-4 col-sm-6">
      <div class="thumbnail">

        <img src="<%= book.image %>">
        <div class="camption">
          <h4><%= book.title %></h4>
        </div>
        <p><a class="btn btn-info" href="/book/<%= book._id %>">More Info</a></p>
      </div>
    </div>
  <% }) %>
</div>

<% include ./partials/footer %>